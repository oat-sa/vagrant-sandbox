CREATE_ROLE=$(expect -c "
set timeout 3
spawn sudo -u postgres createuser --superuser --pwprompt <%= @user %>
expect \"Enter password for new role:\"
send \"<%= @password %>\r\"
expect \"Enter it again:\"
send \"<%= @password %>\r\"
expect eof
")

echo "$CREATE_ROLE"
